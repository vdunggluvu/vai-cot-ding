    <UseWindowsForms>true</UseWindowsForms>
    <AssemblyName>MagicKeyboardUtilities</AssemblyName>
    <Product>Magic Keyboard Utilities (Reimplementation)</Product>
    <Company>Magic Utilities Reimpl</Company>
