<Window x:Class="MagicMouseClone.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Magic Mouse Utilities Settings" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel Spacing="15">
            <TextBlock Text="Magic Mouse Utilities Clone" FontSize="24" FontWeight="Bold"/>

            <GroupBox Header="General Settings">
                <StackPanel Margin="10" Spacing="10">
                    <CheckBox x:Name="EnableGesturesCheck" Content="Enable Gestures" IsChecked="True"/>
                    <CheckBox x:Name="ReverseScrollCheck" Content="Reverse Scrolling"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Sensitivity">
                <StackPanel Margin="10" Spacing="10">
                    <TextBlock Text="Scroll Speed"/>
                    <Slider x:Name="ScrollSpeedSlider" Minimum="0.1" Maximum="3.0" Value="1.0" TickFrequency="0.1" IsSnapToTickEnabled="True"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Diagnostic / Debug">
                <StackPanel Margin="10" Spacing="10">
                    <Button Content="Connect Fake Device" Click="ConnectFakeDevice_Click" Width="150" HorizontalAlignment="Left"/>
                    <TextBlock Text="Recent Log:" FontWeight="SemiBold"/>
                    <TextBox x:Name="LogBox" Height="100" TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
