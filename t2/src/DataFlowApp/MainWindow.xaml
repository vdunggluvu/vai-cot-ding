<Window x:Class="DataFlowApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DataFlow Desktop App" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15,10">
            <StackPanel>
                <TextBlock Text="DataFlow Desktop Application" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White"/>
                <TextBlock Text="Data Processing and Transformation Tool" 
                          FontSize="12" 
                          Foreground="#BDC3C7"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <Border Grid.Row="1" Background="#ECF0F1" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="ðŸ“‚ Import CSV" 
                        Command="{Binding ImportCommand}"
                        Background="#3498DB"
                        Foreground="White"
                        Width="150"
                        ToolTip="Load data from CSV file"/>
                
                <Button Content="âš™ï¸ Process Data" 
                        Command="{Binding ProcessCommand}"
                        Background="#2ECC71"
                        Foreground="White"
                        Width="150"
                        ToolTip="Validate and process loaded data"/>
                
                <Button Content="ðŸ’¾ Export CSV" 
                        Command="{Binding ExportCommand}"
                        Background="#E67E22"
                        Foreground="White"
                        Width="150"
                        ToolTip="Export data to CSV file"/>
                
                <Button Content="ðŸ—‘ï¸ Clear" 
                        Command="{Binding ClearCommand}"
                        Background="#E74C3C"
                        Foreground="White"
                        Width="150"
                        ToolTip="Clear all loaded data"/>
            </StackPanel>
        </Border>

        <!-- Data Grid -->
        <Border Grid.Row="2" Margin="10" BorderBrush="#BDC3C7" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Grid Header -->
                <Border Grid.Row="0" Background="#34495E" Padding="10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“Š Data Records" 
                                  FontSize="16" 
                                  FontWeight="SemiBold"
                                  Foreground="White"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding RecordCount}" 
                                  FontSize="14"
                                  Foreground="#BDC3C7"
                                  Margin="15,0,0,0"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1" 
                         ItemsSource="{Binding Records}"
                         AutoGenerateColumns="True"
                         IsReadOnly="True"
                         CanUserAddRows="False"
                         CanUserDeleteRows="False"
                         SelectionMode="Extended"
                         GridLinesVisibility="All"
                         AlternatingRowBackground="#F8F9FA"
                         RowBackground="White"
                         HeadersVisibility="All"
                         FontSize="13">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#7F8C8D"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="8,5"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="BorderBrush" Value="#BDC3C7"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                </DataGrid>

                <!-- Empty State -->
                <Border Grid.Row="1" 
                       Background="White"
                       Visibility="{Binding Records.Count, Converter={StaticResource CountToVisibilityConverter}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“‹" FontSize="64" HorizontalAlignment="Center" Opacity="0.3"/>
                        <TextBlock Text="No data loaded" 
                                  FontSize="18" 
                                  Foreground="#7F8C8D"
                                  HorizontalAlignment="Center"
                                  Margin="0,10,0,0"/>
                        <TextBlock Text="Click 'Import CSV' to load data" 
                                  FontSize="14" 
                                  Foreground="#95A5A6"
                                  HorizontalAlignment="Center"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#34495E" Padding="10,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          Text="Status:" 
                          Foreground="#BDC3C7"
                          FontWeight="SemiBold"
                          Margin="0,0,10,0"/>
                
                <TextBlock Grid.Column="1" 
                          Text="{Binding StatusMessage}" 
                          Foreground="White"
                          FontSize="14"/>

                <!-- Busy Indicator -->
                <StackPanel Grid.Column="2" 
                           Orientation="Horizontal"
                           Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="â³" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Processing..." Foreground="#F39C12" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
