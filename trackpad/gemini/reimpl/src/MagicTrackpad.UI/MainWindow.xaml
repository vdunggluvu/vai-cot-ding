<Window x:Class="MagicTrackpad.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="Magic Trackpad Utilities" Height="450" Width="400"
        Closing="Window_Closing">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tray Icon -->
        <tb:TaskbarIcon x:Name="MyNotifyIcon"
                        ToolTipText="Magic Trackpad Utilities"
                        MenuActivation="RightClick">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Settings" Click="ShowSettings_Click"/>
                    <Separator/>
                    <MenuItem Header="Exit" Click="Exit_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>

        <!-- Header -->
        <TextBlock Text="Magic Trackpad Settings" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Settings -->
        <StackPanel Grid.Row="1">
            <GroupBox Header="Gestures">
                <StackPanel Margin="5">
                    <CheckBox x:Name="ChkTap" Content="Enable Tap to Click" Margin="0,5"/>
                    <CheckBox x:Name="ChkTwoFingerTap" Content="Enable Two Field Tap (Right Click)" Margin="0,5"/>
                    <CheckBox x:Name="ChkScrollV" Content="Vertical Scroll" Margin="0,5"/>
                    <CheckBox x:Name="ChkPinch" Content="Pinch to Zoom" Margin="0,5"/>
                </StackPanel>
            </GroupBox>
            
            <GroupBox Header="Device Status" Margin="0,10,0,0">
                <TextBlock x:Name="TxtStatus" Text="Searching for devices..." Margin="5" Foreground="Gray"/>
            </GroupBox>

             <GroupBox Header="Mock Tools (Debug)" Margin="0,10,0,0">
                <StackPanel Margin="5">
                    <Button Content="Simulate Tap Gesture" Click="SimulateTap_Click"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save &amp; Apply" Padding="10,5" Click="Save_Click" Margin="0,0,10,0"/>
            <Button Content="Close to Tray" Padding="10,5" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
